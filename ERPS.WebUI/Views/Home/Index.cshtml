@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head{
    <script type="text/javascript">
        //加载次级目录
        $(function () {
            $('#MainMenu').accordion({
                onSelect: function (title, index) {
                    var tab = $(this).accordion('getPanel', index);
                    if (tab.find("ul").length <= 0)
                    {
                        $.ajax({
                            url: tab.attr("id"),
                            type: 'GET',
                            dataType: 'html',
                            success: function (msg) {
                                msg = eval('(' + msg + ')');
                                if (msg.Success)
                                {
                                    var sc = '<ul>';
                                    for (var i = 0; i < msg.Data.length; i++)
                                    {
                                        sc += '<li><div><a href="#" rel="' + msg.Data[i].Url + '"><span class="icon icon-nav">&nbsp;</span><span class="nav">' + msg.Data[i].Title + '</span"></a></div></li>';
                                    }
                                    sc += '</ul>';
                                    tab.append(sc);
                                }
                                else
                                {
                                    alert("获取数据失败！");
                                }
                            }
                        });
                    }
                }
            });

            //加载主目录
            $.ajax({
                url: '/Home/GetMainMenu',
                type: 'GET',
                dataType: 'html',
                /***
                前后台消息交互数据结构msg:{success,data[]}
                */
                success: function (msg) {
                    msg = eval('(' + msg + ')');//目的不明，猜测是用来将msg封装成可处理的数据格式
                    if (msg.Success) {
                        for (var i = 0; i < msg.Data.length; i++) {
                            $('#MainMenu').accordion('add', {
                                title: msg.Data[i].Title,
                                selected: false,
                                id: msg.Data[i].Url,
                                iconCls: 'icon icon-mianmenu'
                            });
                        }
                    }
                    else {
                        alert("提取数据失败!");
                    }
                }
            });

            $('.easyui-accordion').on('click', 'a', function () {
                var url = $(this).attr("rel");
                if (!$('#Maintabs').tabs('exists', $(this).text())) {
                    $('#Maintabs').tabs('add', {
                        title: $(this).text(),
                        closable: true,
                        fit: true,
                        content:'<iframe scrolling="auto" frameborder="0" style="width:100%;height:100%;" src="'+url+'"></iframe>',
                    });
                }
            });
        });
    </script>
    }

<body class="easyui-layout">
    <div data-options="region:'north',title:'North Tilte',split:true,noheader:true" style="height:100px;"></div>
    <div data-options="region:'south',title:'South Tilte',split:true,noheader:true" style="height:100px"></div>
    <div data-options="region:'west',title:'菜单',split:true" style="width:200px">
        <div id="MainMenu" class="easyui-accordion"></div>
    </div>
    <div data-options="region:'center',title:'center title',noheader:true" style="padding:5px;background:#eee;">
        <div id="Maintabs" class="easyui-tabs" data-options="fit:true">
            <div id="welcome" title="主页" data-options="iconCls:'icon-house'">welcome!</div>
        </div>
    </div>   
</body>
